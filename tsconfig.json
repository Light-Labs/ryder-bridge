{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "es6"
        ],
        "esModuleInterop": true,
        // emit declarations
        "declaration": true,
        "declarationDir": "./dist/types",
        "declarationMap": true,
        // rules
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*"
    ]
}
